{
  "manifest_version": 3,
  "name": "AutoApply AI - Job Application Assistant",
  "version": "1.0.0",
  "description": "AI-powered job application assistant that captures job descriptions and generates tailored resumes and cover letters",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:5001/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*",
        "https://jobs.google.com/*",
        "https://www.monster.com/*",
        "https://www.ziprecruiter.com/*",
        "https://www.careerbuilder.com/*",
        "https://remoteok.io/*",
        "https://weworkremotely.com/*",
        "https://angel.co/*",
        "https://wellfound.com/*",
        "https://stackoverflow.com/jobs/*",
        "https://dice.com/*",
        "https://www.simplyhired.com/*",
        "https://jobs.lever.co/*",
        "https://jobs.ashbyhq.com/*",
        "https://boards.greenhouse.io/*",
        "https://apply.workable.com/*",
        "https://jobs.smartrecruiters.com/*",
        "https://recruiting.ultipro.com/*",
        "https://careers.google.com/*",
        "https://jobs.apple.com/*",
        "https://www.amazon.jobs/*",
        "https://careers.microsoft.com/*",
        "https://careers.facebook.com/*",
        "https://careers.netflix.com/*",
        "https://jobs.tesla.com/*",
        "https://careers.uber.com/*",
        "https://careers.airbnb.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoApply AI - Job Application Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 